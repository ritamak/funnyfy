<a href="/main" title="main"><i class="bi bi-chevron-left" style="font-size:48px"></i></a>
<a href="/profile" title="profile"><i class="bi bi-person-square" style="font-size:48px"></i></a>

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://i.pinimg.com/originals/8f/64/ad/8f64ad76980a7e3b35d084a6d67c96c5.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <p id="secondLine">all the jokes</p>
      </div>
    </div>
    {{#each knock}}
    <div class="carousel-item">
      <img src="https://i.pinimg.com/originals/8f/64/ad/8f64ad76980a7e3b35d084a6d67c96c5.jpg" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <p id="firstLine">{{this.setup}}</p>
        <p id="secondLine">{{this.punchline}}</p>
        <form action="/add-joke" method="POST" class="form-group">
        <div style="display: none">
        <input type="text" name="mongoDBid" value={{this._id}}>
        <input type="text" name="id" value={{this.id}}>
        <input type="text" name="type" value={{this.type}}>
        <input type="text" name="setup" value={{this.setup}}>
        <input type="text" name="punchline" value={{this.punchline}}>
        </div>
        <button type="submit" class="fav" onsubmit="return false"><i class="bi bi-bookmark-plus" style="font-size:30px"></i></button>
        </form>
      </div>
    </div>
    {{/each}}
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>