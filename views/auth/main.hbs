<!-- Profile BUTTON -->
<!-- TITLE -->
<h1 id="jokeText">Joke library</h1>
<br>
<!-- GET RANDOM JOKE -->
<div id="randomJokes">
  <div id="programming">
  {{#each jokeProgramming}}
  {{this.setup}}
  {{this.punchline}}
  {{/each}}
  </div>
  <div id="knock">
  {{#each jokeKnock}}
  {{this.setup}}
  {{this.punchline}}
  {{/each}}
  </div>
  <div id="general">
  {{#each jokeGeneral}}
  {{this.setup}}
  {{this.punchline}}
  {{/each}}
  </div>
</div>

<!-- SEARCH FOR JOKES -->
<div class="search-container">
<form action="/GET">
  <input type="text" placeholder="search jokes" name="search">
  <button type="submit"><i class="fa fa-search"></i></button>
</form>
</div>
<!-- COLLECTION OF JOKES -->
